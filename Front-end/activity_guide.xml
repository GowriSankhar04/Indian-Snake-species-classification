<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/button"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="@string/guide_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Guide Steps -->
        <TextView
            android:text="@string/guide_1"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/guide_2"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/guide_3"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/guide_4"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/guide_5"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/guide_internet"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Disclaimer -->
        <TextView
            android:text="@string/guide_disclaimer"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/text"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
